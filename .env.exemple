# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=ministere_transports_niger
DB_PASSWORD=your_database_password
DB_PORT=5432

# Server Configuration
# Port pour le backend (4000 en développement, 4001 en production via PM2)
PORT=4000
# NODE_ENV est utilisé par le backend Node.js (pas par Vite)
# Vite affichera un warning, mais c'est normal - cette variable est pour le serveur backend
NODE_ENV=production

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGIN=https://transports.gouv.ne,https://www.transports.gouv.ne

# JWT Secrets (generate strong random strings for production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_change_this_in_production
JWT_ACCESS_SECRET=your_access_token_secret_key_here_make_it_long_and_secure_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here_make_it_very_long_and_secure_change_in_production

# Email Configuration (for OTP and notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-app-password 
