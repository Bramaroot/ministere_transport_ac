# Ceci est un exemple de fichier de configuration Nginx pour votre application.
# Vous devrez l'adapter à votre environnement de production.

# Serveur pour la redirection de HTTP vers HTTPS
server {
    listen 80;
    server_name votre-domaine.com; # Remplacez par votre nom de domaine

    # Redirige tout le trafic HTTP vers HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# Serveur principal pour HTTPS
server {
    listen 443 ssl;
    server_name votre-domaine.com; # Remplacez par votre nom de domaine

    # Chemins vers vos certificats SSL (générés avec Let's Encrypt, par exemple)
    ssl_certificate /etc/letsencrypt/live/votre-domaine.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/votre-domaine.com/privkey.pem;

    # Emplacement des fichiers de votre frontend compilé
    root /var/www/niger-transport-hub/dist; # Remplacez par le chemin vers votre dossier `dist`
    index index.html;

    # Configuration pour servir l'application React (Single Page Application)
    location / {
        try_files $uri /index.html;
    }

    # Proxy pour les requêtes API vers le backend Node.js
    # Toutes les requêtes commençant par /api/ seront redirigées
    location /api/ {
        proxy_pass http://localhost:3001; # Assurez-vous que votre backend tourne sur ce port
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    # Proxy pour les fichiers uploadés publiquement
    location /uploads/ {
        proxy_pass http://localhost:3001/uploads/;
        proxy_set_header Host $host;
    }

    # Interdire l'accès direct aux fichiers uploadés privés
    location /private_uploads/ {
        deny all;
        return 404;
    }
}
